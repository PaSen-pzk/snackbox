        <text>下一站</text>
        <text>
          <text class="iconfont iconjushoucang"></text>
          <text>245</text>
        </text>
      </view>
    </view>
    <view class="index-list-item">
      <image mode="aspectFill" src="../../images/swiper/photo-1551214012-84f95e060dee.jpg"/>
      <view class="index-list-text">
        <text>詹皇</text>
        <text>
          <text class="iconfont iconjushoucang"></text>
          <text>889</text>
        </text>
      </view>
    </view>
    <view class="index-list-item">
      <image mode="aspectFill" src="../../images/swiper/photo-1551214012-84f95e060dee.jpg"/>
